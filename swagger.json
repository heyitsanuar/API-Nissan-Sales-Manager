{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Nissan Sales Application"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        },
        {
            "name": "Clientes",
            "description": "CRUD de Clientes"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get all users in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Users"
                        }
                    }
                }
            }
        },
        "/users/{userId}": {
            "parameters": [
                {
                    "name": "userId",
                    "in": "path",
                    "required": true,
                    "description": "ID of user that we want to find",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user with given ID",
                "responses": {
                    "200": {
                        "description": "User is found",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete user with given ID",
                "tags": [
                    "Users"
                ],
                "responses": {
                    "200": {
                        "description": "User is deleted",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update user with give ID",
                "tags": [
                    "Users"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is updated",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/Clientes": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "description": "Obtiene todos los clientes (Sin la agencia ni agentes)",
                "parameters": [
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Obtuvo con Ã©xito los usuarios",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "boolean"
                                },
                                "data": {
                                    "type": "object",
                                    "$ref": "#/definitions/Cliente"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Hubo un error en la solicitud",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "500": {
                        "description": "Hubo un error en la solicitud",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "email",
                "_id"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "lastName": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                }
            }
        },
        "Users": {
            "type": "array",
            "$ref": "#/definitions/User"
        },
        "Base": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "boolean"
                },
                "data": {
                    "type": "object"
                }
            }
        },
        "Cliente": {
            "required": [
                "_id",
                "apellidoP",
                "apellidoM",
                "rfc",
                "telefono",
                "correo",
                "estado",
                "cp",
                "domicilio",
                "agencia"
            ],
            "properties": {
                "_id": {
                    "type": "string"
                },
                "nombre": {
                    "type": "string"
                },
                "apellidoP": {
                    "type": "string"
                },
                "apellidoM": {
                    "type": "string"
                },
                "rfc": {
                    "type": "string"
                },
                "telefono": {
                    "type": "string"
                },
                "correo": {
                    "type": "string"
                },
                "estado": {
                    "type": "string"
                },
                "cp": {
                    "type": "int"
                },
                "domicilio": {
                    "type": "string"
                },
                "agencia": {
                    "type": "string"
                },
                "agente": {
                    "type": "string"
                },
                "meta": {
                    "type": "object",
                    "properties": {
                        "activo": {
                            "type": "boolean"
                        },
                        "creado": {
                            "type": "date"
                        },
                        "modificado": {
                            "type": "date"
                        }
                    }
                }
            }
        }
    }
}